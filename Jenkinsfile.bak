pipeline {
    agent any
    stages {
        stage('Ready for ruby') {
            steps {
                sh('''#!/bin/zsh -l
                     source ${HOME}/.zshrc
                     bundle install
                ''')
            }
        }
        stage('Ready for node') { 
            steps {
                nodejs('Node-v20.18.1') {
                    sh "npm run install-standalone"
                }
            }
        }

        stage('Build mac dmg') { 
            steps {
                nodejs('Node-v20.18.1') {
                    sh('''#!/bin/zsh -l
                         source ${HOME}/.zshrc
                         npm run desktop-build 
                    ''')
                }
            }
        }

        stage('Build android release apk') { 
            steps {
                nodejs('Node-v20.18.1') {
                    sh('''#!/bin/zsh -l
                         source ${HOME}/.zshrc
                         npm run android-build 
                    ''')
                }
            }
        }

        stage('finally move apps to dist') {
            steps {
                sh('''#!/bin/zsh -l
                     source ${HOME}/.zshrc
                     sh "./scripts/jenkins-stage.sh"
                ''')
            }
        }


    }
}
